# Kinetic Ledger Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Gemini API Configuration
# =============================================================================
# Get API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_api_key_here

# Gemini File Search Corpus Configuration
# Corpus name for motion analysis storage (auto-created if doesn't exist)
FILE_SEARCH_CORPUS_NAME=kinetic-motion-analysis

# =============================================================================
# Circle API Configuration (Phase 2)
# =============================================================================
# Get API credentials from: https://console.circle.com/
# Format: TEST_API_KEY:xxx:yyy for test mode, LIVE_API_KEY:xxx:yyy for production
CIRCLE_API_KEY=TEST_API_KEY:198d58acf2186836eaf35f5cd1f9d7e1:4a91e529ad73e0bd82c47ca9c96ad1b9

# =============================================================================
# Arc RPC Configuration (Phase 2)
# =============================================================================
# Arbitrum Sepolia RPC endpoint
ARC_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARC_CHAIN_ID=421614

# Private key for signing transactions (DO NOT commit this!)
ARC_PRIVATE_KEY=<your_private_key>

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Vector Database Options (Advanced)
# =============================================================================
# Qdrant configuration (alternative to File Search)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=<your_qdrant_api_key>

# pgvector configuration (alternative to File Search)
# DATABASE_URL=postgresql://user:password@localhost:5432/kinetic_ledger

# =============================================================================
# Redis Configuration (for queuing/caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Object Storage Configuration
# =============================================================================
# AWS S3
# AWS_ACCESS_KEY_ID=<your_access_key>
# AWS_SECRET_ACCESS_KEY=<your_secret_key>
# AWS_S3_BUCKET=kinetic-ledger-motions

# Google Cloud Storage
# GCS_PROJECT_ID=<your_project_id>
# GCS_BUCKET=kinetic-ledger-motions
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# Development / Testing
# =============================================================================
# Set to "true" to enable debug mode
DEBUG=false

# Set to "true" to use mock services when APIs unavailable
USE_MOCK_SERVICES=false

# Pytest configuration
PYTEST_TIMEOUT=300
